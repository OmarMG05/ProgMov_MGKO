<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reto"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="left"
            android:padding="16dp"
            android:background="@color/purple"
            android:textColor="@android:color/white" android:id="@+id/textView"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:gravity="center"
            android:orientation="vertical"
            tools:context=".MainActivity"
            android:background="#9FCFDE" android:layout_marginTop="0dp" android:layout_below="@+id/textView">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/miNombre"
                  android:textSize="18sp"
                  android:gravity="center_horizontal"
                  android:textColor="@color/purple"
                  android:layout_marginBottom="70dp"
        />
        <EditText
                android:id="@+id/editText"
                android:hint="@string/user"
                android:textColorHint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:inputType="text"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="12dp"

                tools:ignore="DuplicateIds"/>
        <EditText
                android:id="@+id/editText2"
                android:hint="@string/last_name"
                android:textColorHint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:inputType="text"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="12dp"

        />

        <EditText
                android:id="@+id/editText3"
                android:hint="@string/phone"
                android:textColorHint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:inputType="phone"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="12dp"

        />

        <EditText
                android:id="@+id/editText4"
                android:hint="@string/email"
                android:textColorHint="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:inputType="textEmailAddress"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="12dp"

        />

        <Button
                android:id="@+id/btnAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accept_button"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:backgroundTint="@color/purple"
                android:onClick="onAcceptButtonClicked"/>

        <ImageView
                android:id="@+id/authResultImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="50dp"
                android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>